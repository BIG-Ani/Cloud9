<% include ../partials/header %>

    <div class="container">
            <h1 style="text-align: center;">Edit Comment</h1>
            
            <div style="width: 30%; margin:50px auto;">
                <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text"  name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-block" type="submit">
                    </div>
                </form>
                
            </div>
            
            <a href="/campgrounds">Back to the campgrounds list</a>
        </div>
        
        
    
<% include ../partials/footer %>